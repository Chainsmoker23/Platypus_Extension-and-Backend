{
  "name": "platypus-ai",
  "displayName": "Platypus AI",
  "description": "AI-powered development system",
  "version": "0.0.1",
  "icon": "assets/platypus-icon.svg",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:platypusAIView"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "platypus-ai-sidebar",
          "title": "Platypus AI",
          "icon": "assets/platypus-icon.svg"
        }
      ]
    },
    "views": {
      "platypus-ai-sidebar": [
        {
          "id": "platypusAIView",
          "name": "Platypus AI",
          "type": "webview"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.80.0",
    "@types/node": "20.x",
    "typescript": "^5.0.0",
    "@types/diff": "^5.2.0"
  },
  "dependencies": {
    "diff": "^5.2.0"
  }
}